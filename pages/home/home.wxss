/* pages/home/home.wxss */

@import "class-item/class-item-tpl.wxss";
@import "plan-item/plan-item-tpl.wxss";
.container{
  padding: 0;
}
.head-container{
  width: 100%;
  height:70px;
  background-color: #fff;
  padding-top: 15px;
  flex-direction:row;
  display:flex;
  z-index: 0;
}

.head-welcome{
  width: 100%;
  height: 80rpx;
  z-index: 0;
}
.head-welcome .weatherIcon{
  margin-left: 10px;
  margin-top: 2px;
  width: 25px;
  height: 25px;
}
.head-welcome .notification{
  width: 25px;
  height: 20px;
  margin-left: 190px;
}
.userName{
  float: left;
  margin-left: 10px;
  height: 28px;
}
.con-icon{
  margin-left:20px;
  width:55rpx;
  height:62rpx;
}
.head-control{
  
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  margin-right: 20px;
  height: 100px;
  width: 120rpx;
}
.con-text{
  text-align: center;
  margin-top: 10px;
  font-size: 12px;
  color: #666666;
}
.class-form{
  background-color: #fff;
  z-index: 1;
  margin-top: -30px;
}
.formTitle{
  margin-top: 10px;
  height: 25px;
  display: flex;
  flex-direction: row;
}
.formTitle image{
  margin-top: 7px;
  margin-left: 10px;
  width: 14px;
  height: 15px;
}
.formTitle text{
  margin-left: 10px;
  font-weight: 600;
  
}
.thisWeekForm{
  margin-left:180px;
  padding-bottom: 5px;
}
.thisWeekForm text{
  font-size: 12px;
  font-weight: 400;
}
.thisWeekForm image{
  width: 6px;
  height: 10px;
}

.date{
  width: 100px;
  font-size: 10px;
 margin-left: 35px;
  color: #666666;
}

.plan-form{
  width: 100%;
  background-color: #fff;
  z-index: 1;
  
}

.formTitle .addIcon{
  margin-left:300px;
  width: 16px;
  height: 16px;
}

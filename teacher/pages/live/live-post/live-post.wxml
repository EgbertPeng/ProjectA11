<!--teacher/pages/live/live-post/live-post.wxml-->
<view class="container" >
<view style='display:flex;flex-direction:row;align-items:center;padding:10rpx 0rpx;border-bottom:1px solid #eee;margin:0 24rpx;'>
    <text >直播名称</text>
    <input placeholder='请填入直播名称' style='font-size:28rpx;font-weight:500;margin-left:5px;'></input>
</view>

<view style='display:flex;flex-direction:column;padding:10rpx 0rpx;margin:10px 24rpx;'>
      <text >直播分类</text>
      <view style='display:flex;flex-direction:row;'>
          <view style='display:flex;flex-direction:row;align-items:center;margin-top:10px;border-bottom:1px solid #eee;'>
              <text style='color:#999999;font-weight:500;'>IT·互联网</text>
              <image src='/images/icon/down_Arrow.png' style='width:20rpx;height:11rpx;margin-left:20px;'></image>
          </view>
          <view style='display:flex;flex-direction:row;align-items:center;margin-top:10px;border-bottom:1px solid #eee; margin-left:40px;'>
                <text style='color:#999999;font-weight:500;'>产品策划</text>
                <image src='/images/icon/down_Arrow.png' style='width:20rpx;height:11rpx;margin-left:20px;'></image>
            </view>
      </view>
</view>

<view style='display:flex;flex-direction:column;padding:10rpx 0rpx;margin:10px 24rpx;'>
      <text >直播关键词</text>
      <view  style='display:flex;flex-direction:row;align-items:center;'>
          <input placeholder='请输入标签' style='width:70%;font-size:28rpx;font-weight:500;margin-top:5px;border-bottom:1px solid #eee;'></input>
          <text style='position:absolute;right:24rpx;color:#1D5FFF'>添加关键词</text>
       </view>   
</view>

<view style='padding:24rpx 24rpx;'>
    <block wx:for="{{tabs}}">
          <text style='color:#666666;padding:4rpx 10rpx;background:#EEEEEE;font-weight:500;margin-right:5px;border-radius:8rpx;'>{{item}}</text>
    </block>
</view>
<text style='margin-left:24rpx;font-size:16rpx;color:#666666;'>还可添加4个关键词,长按可删除。</text>
</view>
<!--直播按钮-->
<view style='display:flex;padding:0 135rpx;height:70rpx; margin-top:100rpx;'>
    <text class="live-btn">开始直播</text>
</view>


